<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="app.shipping_calculator.limited_flat_rate" class="AppBundle\Shipping\Calculator\LimitFlatRateCalculator">
            <tag name="sylius.shipping_calculator" calculator="limited_flat_rate"
                 form-type="AppBundle\Form\Type\ChannelBasedLimitFlatRateConfigurationType"
                 label="app.form.shipping_calculator.limited_flat_rate_configuration.label" />
        </service>

        <service id="app.listener.admin.menu_builder" class="AppBundle\EventListener\AdminMenuListener">
            <tag name="kernel.event_listener" event="sylius.menu.admin.main" method="addSupplierMenu"/>
        </service>

        <service id="app.form.extension.type.product"
                 class="AppBundle\Form\Extension\ProductTypeExtension">
            <tag
                name="form.type_extension"
                extended-type="Sylius\Bundle\ProductBundle\Form\Type\ProductType" />
        </service>

        <service id="app.block.product_form_type" class="Sylius\Bundle\UiBundle\Block\BlockEventListener">
            <argument>@App/_productForm.html.twig</argument>
            <tag name="kernel.event_listener"
                 event="sonata.block.event.sylius.admin.product.update.tab_details"
                 method="onBlockEvent" />
            <tag name="kernel.event_listener"
                 event="sonata.block.event.sylius.admin.product.create.tab_details"
                 method="onBlockEvent" />
        </service>

        <service id="app.form_type.supplier_type" class="AppBundle\Form\Type\SupplierType">
            <argument>%app.model.supplier.class%</argument>
            <argument type="collection"></argument>
            <tag name="form.type" />
        </service>

        <service id="app.promotion_checker.birthday_rule_checker" class="AppBundle\Promotion\Checker\BirthdayRuleChecker">
            <tag name="sylius.promotion_rule_checker" type="birthday_today" label="app.promotion_rule.birthday" form-type="Symfony\Component\Form\Extension\Core\Type\FormType" />
        </service>
    </services>
</container>
